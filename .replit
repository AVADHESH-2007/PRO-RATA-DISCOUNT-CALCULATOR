
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npx http-server -p 5000"]

[workflows]
runButton = "Web Server"

[[workflows.workflow]]
name = "Web Server"
author = 43289476
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx http-server -p 5000 --cors"

[[ports]]
localPort = 5000
externalPort = 80
